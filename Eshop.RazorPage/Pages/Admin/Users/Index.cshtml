@page "{handler?}"
@model Eshop.RazorPage.Pages.Admin.Users.IndexModel
@using Eshop.RazorPage.Infrastructure.Utils
@using Eshop.RazorPage.Infrastructure

@{
    ViewData["title"] = "مدیریت کاربران";
    ViewData["selected"] = "users_user";
}

<form class="card shadow-lg" method="get">
    <div class="card-header text-left">
        <a asp-page="Index" class="btn btn-danger btn-sm">حذف فیلتر</a>
        <button type="submit" class="btn btn-primary btn-sm">فیلتر</button>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <label>شناسه کاربر</label>
                <input type="number" asp-for="FilterParams.Id" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>شماره موبایل</label>
                <input type="text" asp-for="FilterParams.PhoneNumber" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>ایمیل</label>
                <input type="text" asp-for="FilterParams.Email" class="form-control" />
            </div>
        </div>
    </div>
</form>

<a asp-page="Add" class="btn btn-success mb-2">
    <i class="fa fa-plus"></i>
    افزودن کاربر
</a>

<div class="card">
    <div class="card-body table-responsive p-0">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام و نام خانوادگی</th>
                    <th>ایمیل</th>
                    <th>شماره موبایل</th>
                    <th>تاریخ ثبت‌نام</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.FilterResult.Data)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Family</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.CreationDate.ToPersianDateTime()</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-userId="@user.Id">ویرایش</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
